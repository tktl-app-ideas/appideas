- model_class = Keyword
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @keyword.name
%p
  %strong= model_class.human_attribute_name(:concrete) + ':'
  %br
  = @keyword.concrete

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), keywords_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_keyword_path(@keyword), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), keyword_path(@keyword), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
